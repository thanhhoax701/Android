<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="#6F6F73"
        android:gravity="center_vertical|center_horizontal"
        android:text="TRUY VẤN CONTENT PROVIDER"
        android:textAllCaps="true"
        android:textColor="#0A20AE"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#94ADE1"
        android:gravity="center"
        android:text="XEM TẤT CẢ LIÊN LẠC"
        android:textColor="#03146E"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#94ADE1"
        android:gravity="center"
        android:text="XEM LỊCH SỬ CUỘC GỌI"
        android:textColor="#03146E"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#94ADE1"
        android:gravity="center"
        android:text="XEM DANH SÁCH MEDIA"
        android:textColor="#03146E"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/tren_song" />

</LinearLayout>